<!DOCTYPE html>
<html>
  <head>
    <title>My Blog</title>
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
  </head>
  <body class="bg-gray-100">
    <h1 class="text-3xl font-bold text-gray-800 mb-4">My Blog</h1>
    <ul class="list-reset">
      <% blogs.forEach(blog => { %>
        <li class="mb-2 rounded-lg bg-blue-200 p-2 hover:bg-blue-300">
          <a class="text-blue-800 hover:text-blue-600" href="/blogs/<%= blog.id %>"><%= blog.title %></a>
        </li>
      <% }); %>
    </ul>
    <a href="blogs/create"><button class="bg-blue-800 text-white center px-4 py-2"> Create New Post</button></a>

  </body>
</html>
